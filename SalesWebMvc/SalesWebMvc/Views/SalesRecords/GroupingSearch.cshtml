@model IEnumerable<IGrouping<Department, SalesRecord>>

@{
    ViewData["Title"] = "Grouping Search";
    DateTime minDate;
    DateTime maxDate;

    // Tenta fazer a conversão de maneira segura
    if (!DateTime.TryParse(ViewData["minDate"] as string, out minDate))
    {
        minDate = DateTime.MinValue; // Valor padrão caso a conversão falhe
    }

    if (!DateTime.TryParse(ViewData["maxDate"] as string, out maxDate))
    {
        maxDate = DateTime.MaxValue; // Valor padrão caso a conversão falhe
    }

    // Formatação correta das datas no formato "yyyy-MM-dd"
    string formattedMinDate = minDate != DateTime.MinValue ? minDate.ToString("yyyy-MM-dd") : string.Empty;
    string formattedMaxDate = maxDate != DateTime.MaxValue ? maxDate.ToString("yyyy-MM-dd") : string.Empty;
}

<h2>@ViewData["Title"]</h2>

<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
                <label for="minDate">Min Date</label>
                <input type="date" class="form-control" name="minDate" value="@formattedMinDate">
            </div>
            <div class="form-group">
                <label for="maxDate">Max Date</label>
                <input type="date" class="form-control" name="maxDate" value="@formattedMaxDate">
            </div>
            <button type="submit" class="btn btn-primary">Filter</button>
        </form>
    </div>
</nav>

@foreach (var departmentGroup in Model)
{
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">
                Department @departmentGroup.Key.Name,
                Total sales = @departmentGroup.Key.TotalSales(minDate, maxDate).ToString("F2")
            </h3>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr class="success">
                        <th>Date</th>
                        <th>Amount</th>
                        <th>Seller</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in departmentGroup)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Date)</td>
                            <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                            <td>@(item.Seller != null ? item.Seller.Name : "N/A")</td> <!-- Verificação de null para Seller -->
                            <td>@Html.DisplayFor(modelItem => item.Status)</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
}
